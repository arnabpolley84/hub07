{% if section.settings.enable_announcement %}
  <div
    class="seasonal-announcement"
    style="
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
    "
  >
    <div class="announcement-inner">
      {% if section.settings.season != blank %}
        <span class="announcement-season">
          {{ section.settings.season }}
        </span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="announcement-heading">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subtext != blank %}
        <p class="announcement-subtext">
          {{ section.settings.subtext }}
        </p>
      {% endif %}
    </div>
  </div>
{% endif %}

<style>
  .seasonal-announcement {
    padding: 16px;
    text-align: center;
  }

  .announcement-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .announcement-season {
    display: inline-block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 6px;
    opacity: 0.8;
  }

  .announcement-heading {
    margin: 4px 0;
    font-size: 20px;
    font-weight: 600;
  }

  .announcement-subtext {
    margin: 0;
    font-size: 14px;
  }
</style>

{% schema %}
{
  "name": "Seasonal Announcement",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_announcement",
      "label": "Enable announcement",
      "default": true
    },
    {
      "type": "select",
      "id": "season",
      "label": "Season",
      "options": [
        { "value": "Summer Sale", "label": "Summer Sale" },
        { "value": "Winter Collection", "label": "Winter Collection" },
        { "value": "Festive Offer", "label": "Festive Offer" },
        { "value": "Limited Time Deal", "label": "Limited Time Deal" },
        { "value": "Custom Announcement", "label": "Custom Announcement" }
      ],
      "default": "Custom Announcement"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Announcement heading",
      "default": "Seasonal offers are live!"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Announcement subtext",
      "default": "Enjoy exclusive discounts for a limited time."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Seasonal Announcement",
      "category": "Text"
    }
  ]
}
{% endschema %}
